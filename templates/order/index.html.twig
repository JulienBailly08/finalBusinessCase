{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-center">Finalisation de ma commande</h2>
		<p class="mt-4">Choisissez vos préferences avant de passer votre commande</p>
        <hr>
        <div class="row">
        <div class="col-md-6">
        <b>Choisir mon adresse de livraison</b><br>
        {% set formHtml %}
        {{ form(form) }}
        {% endset %}

        {{ formHtml|replace({'[br]': '<br>'})| raw }}
        <b>Choisir mon transporteur</b>
        </div>
        <div class="col-md-6">
        <b>Récap de ma commande</b><br>
        <b>Bouton pour payer</b>        
        </div>       
        </div>
	</div>

{% endblock %}
