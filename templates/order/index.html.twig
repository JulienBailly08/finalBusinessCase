{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-center">Finalisation de ma commande</h2>
		<p class="mt-4">Choisissez vos pr√©ferences avant de passer votre commande</p>
        <hr>
        <div class="row">
            <div class="col-md-6">
                {% set formHtml %}
                    {{ form(form) }}
                {% endset %}

                {{ formHtml|replace({'[br]': '<br>'})| raw }}
                <a class="btn btn-primary" href="{{path('user_front-adress_edit')}}">Modifier l'adresse</a>
            </div>

            <div class="col-md-6">
                {% for item in items %}
                <div class="row">
                <div class="col-2"><img src="{{ asset('upload/'~ item.product.picture1)}}" alt="{{item.product.title}}" height="75px"></div>
                 <div class="col-8 my-auto">{{item.product.title}}</div>
                <div class="col-2 my-auto"> x {{item.quantity}}</div>
                </div>



						<tr>
							<td>
								{{item.product.title}}
							</td>
							<td>{{item.product.price |number_format(2)}}
								</td>
							<td>{{ (item.product.price*item.product.tvaRate.rate) |number_format(2) }}
								</td>
							<td>{{item.quantity}}</td>
							<td>{{(item.product.price*item.quantity) |number_format(2)}}
								</td>
							<td>{{(item.product.price*item.product.tvaRate.rate*item.quantity) |number_format(2) }}
								</td>
		
						</tr>
					{% endfor %}
                <b>Bouton pour payer</b>        
            </div>       
        </div>
	</div>

{% endblock %}
