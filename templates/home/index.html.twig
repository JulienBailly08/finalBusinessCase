{% extends 'base.html.twig' %}


{% block body %}

	{% include 'home/content/carousel.html.twig' %}
	{% include 'home/content/nous.html.twig' %}


	<section class="pt-4 mb-5">
		<div class="container pt-5 g-0">
			<h2 class="text-warning text-center mb-5">Nos produits les plus demand√©s</h2>
			<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 gy-3 gy-md-4 gx-md-4 mb-4">
				{% for value in shuffleArray %}
					{% for phare in phares %}
						{% if phare.id == value and phare.isactive == 1 %}

							<div class="col zoom">
								<div class="bg-secondary d-flex flex-column p-3 rounded-2">
									<img src="{{ asset('upload/'~ phare.picture1)}}" class=" rounded img-fluid">
									<h3 class="text-center text-success h6 mt-4 mb-3">{{phare.title}}</h3>
									<a href="{{ path('product_front',{'id':phare.id})}}" class="text-center">En savoir +</a>
								</div>
							</div>
							
						{% endif %}
					{% endfor %}
				{% endfor %}

			</div>
		</div>
	</div>
</section>


{% include 'home/content/reassurage.html.twig' %}{% endblock %}
