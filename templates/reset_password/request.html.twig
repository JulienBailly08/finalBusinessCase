{% extends 'base.html.twig' %}
{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
	- Réinitialisation mot de passe
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center">
		<div class="col-6">
			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}
			<h1>Réinitialisation du mot de passe</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email,{'label' : 'Votre E-mail : '}) }}
			<div>
				<small>
					Saisissez votre adresse mail et nous vous expédierons un lien permettant la réinitilisation de votre mot de passe.
				</small>
			</div>

			<button class="btn btn-primary">Réinitialiser le mot de passe</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
