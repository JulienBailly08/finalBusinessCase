{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %} - Enregistrement{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center">
    <div class="col-10">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="text-center">Création de compte</h1>
        {{ form_start(registrationForm) }}
              
            {{ form_row(registrationForm.gender, {label: 'Civilité :' }) }}
            {{ form_row(registrationForm.firstname,{'label' : 'Votre prénom : '}) }}
            {{ form_row(registrationForm.lastname,{'label' : 'Votre nom : '}) }}
            {{ form_row(registrationForm.dateOfBirth,{'label' : 'Votre date de naissance : '}) }}
            <hr>
            {{ form_row(registrationForm.email,{'label' : 'Email :'}) }}
            {{ form_row(registrationForm.username,{'label' : 'Nom d\'utilisateur :'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe :' }) }}
            <hr>
            {{ form_row(registrationForm.adress.number, {label: 'Numéro :' }) }}
            {{ form_row(registrationForm.adress.type, {label: 'Type de voie :' }) }}
            {{ form_row(registrationForm.adress.name, {label: 'Adresse  :' }) }}
            {{ form_row(registrationForm.adress.postalCode, {label: 'Code postale :' }) }}    
            {{ form_row(registrationForm.adress.city, {label: 'Ville :' }) }}
            {{ form_row(registrationForm.adress.country, {label: 'Pays  :' }) }}
            {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les CGV et CGU' }) }}
            <button type="submit" class="btn btn-primary">S'enregistrer</button> 
        {{ form_end(registrationForm) }}

       
    </div>    
</div>    
{% endblock %}
