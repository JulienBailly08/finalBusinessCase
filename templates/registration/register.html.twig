{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="col">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1>Création de compte</h1>
        {{ form_start(registrationForm) }}
              
            {{ form_row(registrationForm.gender, {label: 'Civilité :' }) }}
            {{ form_row(registrationForm.firstname,{'attr' :{'placeholder' :'Sibylle'},'label' : 'Votre prénom : '}) }}
            {{ form_row(registrationForm.lastname,{'attr' :{'placeholder' :'Bailly'},'label' : 'Votre nom : '}) }}
            {{ form_row(registrationForm.dateOfBirth,{'attr' :{'placeholder' :'Bailly'},'label' : 'Votre date de naissance : '}) }}
            <hr>
            {{ form_row(registrationForm.email,{'attr' :{'placeholder' :'Adresse E-mail'},'label' : 'Email '}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe' }) }}
            <hr>
            {{ form_row(registrationForm.adress.number, {label: 'Numéro :' }) }}
            {{ form_row(registrationForm.adress.type, {label: 'Type de voie :' }) }}
            {{ form_row(registrationForm.adress.name, {label: 'Adresse  :' }) }}
            {{ form_row(registrationForm.adress.postalCode, {label: 'Code postale :' }) }}    
            {{ form_row(registrationForm.adress.city, {label: 'Ville :' }) }}
            {{ form_row(registrationForm.adress.country, {label: 'Pays  :' }) }}
            {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les CGV et CGU' }) }}
            <button type="submit" class="btn btn-primary">S'enregistrer</button> 
        {{ form_end(registrationForm) }}

       
    </div>    
</div>    
{% endblock %}
