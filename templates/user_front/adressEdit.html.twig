{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}
	- Compte
{% endblock %}

{% block body %}


<div class="container-fluid">
	<div class="m-1">
		<a class="btn btn-primary" href="{{path('user')}}">Retour à la gestion du compte</a>
	</div>
	<div class="row justify-content-center">
		<div class="col-8">
			{{ form_start(form) }}
			{{ form_row(form.adressName, {label: 'Nom de l\'adresse :' }) }}
            {{ form_row(form.number, {label: 'Numéro :' }) }}
            {{ form_row(form.type, {label: 'Type de voie :' }) }}
            {{ form_row(form.name, {label: 'Adresse  :' }) }}
            {{ form_row(form.postalCode, {label: 'Code postale :' }) }}    
            {{ form_row(form.city, {label: 'Ville :' }) }}
            {{ form_row(form.country, {label: 'Pays  :' }) }}
            
                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
            {{ form_end(form) }}
        </div>    
    </div>
</div>

{% endblock %}
