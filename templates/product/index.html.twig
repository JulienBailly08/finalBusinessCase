{% extends 'baseBack.html.twig' %}

{% block title %} - Produits{% endblock %}

{% block body %}
	<div class="container-fluid">


		{% macro recursiveCategory(category) %}
			{% import _self as self %}
			<li>
				<p class="m-0 text-white">
					{{category.name}}
					
					<a class="badge bg-secondary ms-4 m-1" href="{{ path('category_edit', {'id': category.id}) }}">Consulter les Produits</a>
					<a class="badge bg-primary ms-4 m-1" href="{{ path('category_new_son',{'id': category.id}) }}">Ajout d'un produit</a>
				</p>


				{% if category.categories|length %}
					<ul>
						{% for child in category.categories %}
							{{ self.recursiveCategory(child) }}
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endmacro %}


		<div class="row row-cols-1 row-cols-xl-2">
			{% for category in categories %}
				{% if category.parent is null %}
					<div class="col">
						<div class=" tailleMin rounded">
							<div class="ps-3">
								<h4 class="text-center text-white m-3">Univers :
									{{category.name}}
								</h4>

								{% from _self import recursiveCategory %}

								{% if category %}
									<div class="mt-5">
										<ul>
											{% for child in category.categories %}

												{{ recursiveCategory(child) }}
											{% endfor %}
										</ul>
									</div>
								{% endif %}

							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	{% endblock %}