{% extends 'base.html.twig' %}

{% block title %}
	- Panier
{% endblock %}

{% block body %}

	{% if items | length >0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix HT</th>
					<th>Prix TTC</th>
					<th>Quantité</th>
					<th>Total HT</th>
					<th>Total TTC</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td><a href="{{ path('product_front',{'id':item.product.id})}}">{{item.product.title}}</a></td>
						<td>{{item.product.price |number_format(2)}}
							€</td>
						<td>{{ (item.product.price*item.product.tvaRate.rate) |number_format(2) }}
							€</td>
						<td>{{item.quantity}}</td>
						<td>{{(item.product.price*item.quantity) |number_format(2)}}
							€</td>
						<td>{{(item.product.price*item.product.tvaRate.rate*item.quantity) |number_format(2) }}
							€</td>
						<td>
							<a href="{{path('basket_remove',{'id':item.product.id}) }}" class="btn btn-danger btn-sm">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			
			<tfoot>
				<tr>
					<td colspan="4" class="text-end">Total :</td>
					<td>{{totalHT|number_format(2)}}
						€</td>
					<td>{{totalTTC|number_format(2)}}
						€</td>
				</tr>
			</tfoot>
		
		</table>

	{% else %}
		<h3 class="text-center">Voter panier est vide</h3>
	{% endif %}

{% endblock %}
