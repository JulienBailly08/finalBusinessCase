{% form_theme form 'bootstrap_5_layout.html.twig' %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-8">
            {{ form_start(form) }}
                {{ form_row(form.name,{'attr' :{'placeholder' :'Nom de la catégorie'},'label' : 'Nom '}) }}
                {{ form_row(form.isActive,{'label' : 'Rendre la catégorie active '}) }}
                {{ form_row(form.img,{'label' : 'Image relative à l\'univers '}) }}
            
                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
            {{ form_end(form) }}
        </div>    
    </div>
</div>